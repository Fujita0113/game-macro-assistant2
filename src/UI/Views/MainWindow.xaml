<Window x:Class="GameMacroAssistant.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:GameMacroAssistant.UI.Converters"
        Title="GameMacroAssistant" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <ToolBar Grid.Row="0">
            <Button Content="🔴 記録開始" Width="100" Height="30" Margin="5" 
                    Command="{Binding StartRecordingCommand}"
                    IsEnabled="{Binding IsRecording, Converter={x:Static converters:InverseBoolConverter.Instance}}"
                    AutomationProperties.Name="記録開始"
                    AutomationProperties.HelpText="マクロの記録を開始します"/>
            <Button Content="⏹️ 停止" Width="100" Height="30" Margin="5"
                    Command="{Binding StopRecordingCommand}"
                    IsEnabled="{Binding IsRecording}"
                    PreviewMouseDown="StopButton_PreviewMouseDown"
                    AutomationProperties.Name="停止"
                    AutomationProperties.HelpText="マクロの記録を停止します"/>
            <Separator/>
            <Button Content="▶️ 再生" Width="100" Height="30" Margin="5"
                    Command="{Binding PlayMacroCommand}"
                    AutomationProperties.Name="再生"
                    AutomationProperties.HelpText="選択されたマクロを再生します"/>
            <Button Content="⚙️ 設定" Width="100" Height="30" Margin="5"
                    Command="{Binding OpenSettingsCommand}"
                    AutomationProperties.Name="設定"
                    AutomationProperties.HelpText="アプリケーションの設定を開きます"/>
        </ToolBar>

        <!-- メインコンテンツエリア -->
        <TabControl Grid.Row="1" Margin="10"
                    AutomationProperties.Name="メインタブコントロール"
                    AutomationProperties.HelpText="マクロ一覧とエディタを切り替えます">
            <TabItem Header="マクロ一覧"
                     AutomationProperties.Name="マクロ一覧"
                     AutomationProperties.HelpText="作成されたマクロの一覧を表示します">
                <ListBox ItemsSource="{Binding Macros}"
                         AutomationProperties.Name="マクロリスト"
                         AutomationProperties.HelpText="作成されたマクロのリストです。選択して操作できます">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="150"/>
                                <TextBlock Text="{Binding EventCount, StringFormat='{}{0} イベント'}" Width="80"/>
                                <TextBlock Text="{Binding Created, StringFormat='{}{0:HH:mm:ss}'}" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="エディタ"
                     AutomationProperties.Name="エディタ"
                     AutomationProperties.HelpText="マクロのビジュアル編集画面です">
                <Grid>
                    <!-- TODO: ビジュアルエディタコンテンツ -->
                    <TextBlock Text="ビジュアルエディタ（実装予定）" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              FontSize="16" 
                              Foreground="Gray"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding SystemStatsText}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>